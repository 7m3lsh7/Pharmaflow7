
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="~/css/Inventory Management.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0/dist/chartjs-plugin-datalabels.min.js"></script>

    <div class="dashboard-container">
        <h1><i class="fas fa-boxes"></i> Inventory Overview</h1>
        <div class="overview">
            <div class="card" id="total-items">
                <h2><i class="fas fa-list"></i> Total Items</h2>
                <p id="total-items-value">0</p>
            </div>
            <div class="card" id="low-stock">
                <h2><i class="fas fa-exclamation-triangle"></i> Low Stock Items</h2>
                <p id="low-stock-value">0</p>
            </div>
            <div class="card" id="expired">
                <h2><i class="fas fa-calendar-times"></i> Expired Items</h2>
                <p id="expired-value">0</p>
            </div>
        </div>

        <div class="chart-container">
            <h2><i class="fas fa-chart-pie"></i> Stock Status</h2>
            <div class="chart-wrapper">
                <canvas id="stockChart" aria-label="Stock Status Pie Chart"></canvas>
            </div>
        </div>

        <div class="inventory-table">
            <h2><i class="fas fa-table"></i> Available Medicines</h2>
            <table>
                <thead>
                    <tr>
                        <th>Medicine Name</th>
                        <th>Warehouse</th>
                        <th>Quantity</th>
                        <th>Expiry Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody id="inventory-body"></tbody>
            </table>
        </div>

        <div class="actions">
            <button id="refresh-btn"><i class="fas fa-sync-alt"></i> Refresh Data</button>
            <button id="add-item-btn"><i class="fas fa-plus"></i> Add New Item</button>
        </div>
    </div>

    <div class="loading-overlay" id="loading">
        <div class="spinner"></div>
    </div>

    <script src="~/js/Inventory Management.js"></script>
>