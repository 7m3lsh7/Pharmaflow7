@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pharmaflow7</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/AccessDenied.css" asp-append-version="true" />
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="text-danger">Access Denied</h1>
        <p class="lead">You do not have permission to access this page.</p>
        @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"]?.ToString()))
        {
            <p>You tried to access: <strong>@ViewData["ReturnUrl"]</strong></p>
        }
        <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Login</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Go to Home</a>
    </div>
</body>
</html>