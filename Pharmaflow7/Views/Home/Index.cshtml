@* Dashboard.cshtml *@
@{
    ViewData["Title"] = "Dashboard";
}

@model DashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .Metrics{
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0px 5px 20px #0d6efd;
        }
        .metric-card {
            text-align: center;
            margin-bottom: 20px;
        }

        .circle-progress {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto;
        }

        .circle-bg {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 10px solid #e0e0e0;
            position: absolute;
            top: 0;
            left: 0;
        }

        .circle-fill {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 10px solid #007bff;
            position: absolute;
            top: 0;
            left: 0;
            clip-path: polygon(50% 50%, 50% 0%, 100% 0%);
            transform: rotate(0deg);
            transition: transform 1s ease-in-out;
        }

        .circle-content {
            position: absolute;
            top: 55%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .circle-icon {
            position: absolute;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 20px;
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 7px;
            margin-top: 10px;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 2px;
        }

        .legend-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Key Metrics</h2>
        <div class="Metrics">
            <div class="row">
                <!-- Registered Medicines -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">REGISTERED MEDICINES:</h5>
                        <div class="circle-progress" data-value="@Model.RegisteredMedicines">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">💊</span>
                            <div class="circle-content">@Model.RegisteredMedicines</div>
                        </div>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>New $5.6K</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>Returning 9.9K</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Active Shipments -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">ACTIVE SHIPMENTS:</h5>
                        <div class="circle-progress" data-value="@Model.ActiveShipments">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">🚚</span>
                            <div class="circle-content">@Model.ActiveShipments</div>
                        </div>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>Active 30</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>Inactive 70</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Low Stock Medicines -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">LOW STOCK MEDICINES:</h5>
                        <div class="circle-progress" data-value="@Model.LowStockMedicines">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">💊</span>
                            <div class="circle-content">@Model.LowStockMedicines</div>
                        </div>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>Lack of storage 10</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>In stock 490</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Daily Shipment Rate -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">DAILY SHIPMENT RATE:</h5>
                        <div class="circle-progress" data-value="@Model.DailyShipmentRate">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">🚚</span>
                            <div class="circle-content">@Model.DailyShipmentRate</div>
                        </div>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>New $5.6K</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>Returning 9.9K</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script>
        $(document).ready(function () {
            $('.circle-progress').each(function () {
                const value = $(this).data('value');
                const maxValue = 500; // Assuming 500 is the max for the circle
                const percentage = (value / maxValue) * 360; // Convert to degrees
                $(this).find('.circle-fill').css('transform', `rotate(${percentage}deg)`);

                // Adjust clip-path based on percentage
                if (percentage > 180) {
                    $(this).find('.circle-fill').css('clip-path', 'none');
                    $(this).find('.circle-fill').css('border-color', '#007bff');
                } else {
                    $(this).find('.circle-fill').css('clip-path', `polygon(50% 50%, 50% 0%, ${50 + (percentage / 360) * 50}% 0%)`);
                }
            });
        });
    </script>
</body>
</html>