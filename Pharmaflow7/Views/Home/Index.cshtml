                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>Lack of storage 10</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>In stock 490</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Daily Shipment Rate -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">DAILY SHIPMENT RATE:</h5>
                        <div class="circle-progress" data-value="@Model.DailyShipmentRate">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">🚚</span>
                            <div class="circle-content">@Model.DailyShipmentRate</div>
                        </div>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>New $5.6K</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>Returning 9.9K</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
