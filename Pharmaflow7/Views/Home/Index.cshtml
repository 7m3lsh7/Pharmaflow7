                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>Returning 9.9K</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Active Shipments -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">ACTIVE SHIPMENTS:</h5>
                        <div class="circle-progress" data-value="@Model.ActiveShipments">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">🚚</span>
                            <div class="circle-content">@Model.ActiveShipments</div>
                        </div>
                        <div class="legend">
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #e0e0e0;"></div>
                                <span>Active 30</span>
                            </div>
                            <div class="legend-item">
                                <div class="legend-dot" style="background-color: #007bff;"></div>
                                <span>Inactive 70</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Low Stock Medicines -->
                <div class="col-md-3">
                    <div class="metric-card">
                        <h5 class="mb-4">LOW STOCK MEDICINES:</h5>
                        <div class="circle-progress" data-value="@Model.LowStockMedicines">
                            <div class="circle-bg"></div>
                            <div class="circle-fill"></div>
                            <span class="circle-icon">💊</span>
                            <div class="circle-content">@Model.LowStockMedicines</div>
                        </div>
                        <div class="legend">
