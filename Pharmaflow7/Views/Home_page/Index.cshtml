<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PharmaFlow - Verify Your Medicine</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css" />
    <link rel="stylesheet" href="./css/Home_page.css" />
</head>
<body>
    <!-- Action Bar -->
    <div class="action-bar" data-aos="fade-down">
        Join the PharmaFlow revolution! <a href="#cta">Get Started Now</a>
    </div>

    <!-- Hero Section -->
    <header class="hero">
        <div class="container">
            <h1 data-aos="zoom-in">PharmaFlow</h1>
            <p data-aos="fade-up" data-aos-delay="100">Scan, verify, and trust your medications in seconds</p>
            <a href="#cta" class="btn" data-aos="fade-up" data-aos-delay="200">Start Scanning</a>
        </div>
    </header>

    <!-- Why Us Section -->
    <section class="why-us">
        <div class="container">
            <div class="grid">
                <div data-aos="fade-right">
                    <h2>Why Choose PharmaFlow?</h2>
                    <p>Fight counterfeit medicines with cutting-edge QR and Blockchain technology. Verify authenticity, track shipments, and ensure your safety with ease.</p>
                    <a href="#" class="btn open-modal">Explore Features</a>
                </div>
                <div data-aos="fade-left">
                    <lottie-player src="https://lottie.host/69b6c8f9-1b29-43db-9a85-a2bdfa0c9b8d/5Y4rNhkwFO.json" background="transparent" speed="1" style="width: 100%; max-width: 400px;" loop autoplay></lottie-player>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
        <div class="container">
            <h2 data-aos="fade-up">How It Works</h2>
            <div class="steps">
                <div class="step" data-aos="zoom-in" data-aos-delay="100">
                    <i class="fas fa-qrcode"></i>
                    <p>Scan the QR code on your medicine</p>
                </div>
                <div class="step" data-aos="zoom-in" data-aos-delay="200">
                    <i class="fas fa-check-circle"></i>
                    <p>Verify details instantly</p>
                </div>
                <div class="step" data-aos="zoom-in" data-aos-delay="300">
                    <i class="fas fa-truck"></i>
                    <p>Track from source to you</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta" id="cta">
        <div class="container">
            <h2 data-aos="zoom-in">Ready to Ensure Your Safety?</h2>
            <p data-aos="fade-up" data-aos-delay="100">Join thousands trusting PharmaFlow for authentic medications.</p>
            <a href="/Auth/Register" class="btn" data-aos="fade-up" data-aos-delay="200">Join Now</a>
        </div>
    </section>


    <!-- Features Modal -->
    <div class="modal" id="features-modal">
        <div class="modal-content">
            <span class="modal-close">&times;</span>
            <h2>Our Features</h2>
            <div class="modal-grid">
                <div class="modal-item">
                    <i class="fas fa-search"></i>
                    <p>Instant Authenticity Check</p>
                </div>
                <div class="modal-item">
                    <i class="fas fa-truck"></i>
                    <p>Real-Time Shipment Tracking</p>
                </div>
                <div class="modal-item">
                    <i class="fas fa-lock"></i>
                    <p>Blockchain Security</p>
                </div>
                <div class="modal-item">
                    <i class="fas fa-globe"></i>
                    <p>Global Pharmacy Network</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true,
            offset: 120
        });

        // Parallax effect for hero
        window.addEventListener('scroll', () => {
            const hero = document.querySelector('.hero');
            const scrolled = window.pageYOffset;
            hero.style.backgroundPositionY = `${scrolled * 0.5}px`;
        });

        // Modal handling
        const modal = document.getElementById('features-modal');
        const openModalBtn = document.querySelector('.open-modal');
        const closeModalBtn = document.querySelector('.modal-close');

        openModalBtn.addEventListener('click', (e) => {
            e.preventDefault();
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden'; // منع الـ scroll
        });

        closeModalBtn.addEventListener('click', () => {
            modal.style.display = 'none';
            document.body.style.overflow = 'auto'; // إرجاع الـ scroll
        });

        // إغلاق الـ modal لما تضغطي برا المحتوى
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });
    </script>   
</body>
</html>