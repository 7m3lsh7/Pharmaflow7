<!-- Views/YourControllerName/add-product.cshtml -->
@{
    ViewData["Title"] = "Add Product";
}


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Medicine Tracking</title>
    <!-- روابط المكتبات الخارجية -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- ربط ملف CSS -->
    <link rel="stylesheet" href="/css/add_product.css">
 

    <!-- Main Content -->
    <div class="content">
        <h1 class="mb-4">Add New Product</h1>

        <div class="form-container">
            <form id="addProductForm">
                <div class="mb-3 position-relative">
                    <input type="text" class="form-control" id="productName" placeholder="Product Name" required>
                    <i class="fas fa-capsules input-icon"></i>
                </div>
                <div class="mb-3 position-relative">
                    <input type="date" class="form-control" id="productionDate" required>
                    <i class="fas fa-calendar-alt input-icon"></i>
                </div>
                <div class="mb-3 position-relative">
                    <input type="date" class="form-control" id="expirationDate" required>
                    <i class="fas fa-calendar-times input-icon"></i>
                </div>
                <div class="mb-3 position-relative">
                    <textarea class="form-control" id="description" rows="3" placeholder="Description" required></textarea>
                    <i class="fas fa-file-alt input-icon" style="top: 20px;"></i>
                </div>
                <button type="submit" class="btn btn-primary w-100">Add Product & Generate QR Code</button>
            </form>

            <!-- QR Code Display -->
            <div id="qrCodeContainer" class="mt-4" style="display: none;">
                <h5>Generated QR Code</h5>
                <div id="qrCode"></div>
                <button class="btn btn-primary mt-3" onclick="downloadQR()">Download QR Code</button>
            </div>
        </div>
    </div>

    <!-- روابط السكربتات -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="/js/add_product.js"></script>
