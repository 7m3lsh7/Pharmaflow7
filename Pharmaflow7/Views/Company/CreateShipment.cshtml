@model Pharmaflow7.Models.ShipmentViewModel
<form asp-action="CreateShipment" method="post" id="createShipmentForm">
    <div class="mb-3">
        <label>Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(Model.Products, "Id", "Name"))"></select>
    </div>
    <div class="mb-3">
        <label>Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Distributor</label>
        <select asp-for="DistributorId" class="form-control" asp-items="@(new SelectList(Model.Distributors, "Id", "UserName"))">
            <option value="">Not Assigned</option>
        </select>
    </div>
    <div class="mb-3">
        <label>Latitude</label>
        <input asp-for="LocationLat" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Longitude</label>
        <input asp-for="LocationLng" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script>
    document.getElementById("createShipmentForm").addEventListener("submit", function(e) {
        console.log("Form submitted with data:");
        console.log({
            ProductId: document.getElementById("ProductId").value,
            Destination: document.getElementById("Destination").value,
            DistributorId: document.getElementById("DistributorId").value,
            LocationLat: document.getElementById("LocationLat").value,
            LocationLng: document.getElementById("LocationLng").value
        });
    });
</script>