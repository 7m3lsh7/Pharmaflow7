@model string
@{
    Layout = null;
    ViewData["Title"] = "Page Not Found";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pharmaflow7</title>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="./css/Notfound.css" rel="stylesheet">

    <style>
      
    </style>
</head>
<body>
    <div class="background-animation">
        <div class="bubble" style="left: 10%; animation-duration: 8s;"></div>
        <div class="bubble" style="left: 30%; animation-duration: 12s;"></div>
        <div class="bubble" style="left: 50%; animation-duration: 9s;"></div>
        <div class="bubble" style="left: 70%; animation-duration: 14s;"></div>
        <div class="bubble" style="left: 90%; animation-duration: 10s;"></div>
    </div>

    <div class="error-container">
        <img src="./image/Screenshot 2025-04-12 211836.png" alt="PharmaFlow7" class="logo" />
        <div class="error-code">404</div>
        <h1 class="error-message text-info">Oops! Page Not Found</h1>
        <p class="text-light">It looks like the page you're looking for doesn't exist or has been moved.</p>
        <a href="@Url.Action("Index", "Home_page")" class="btn-home mt-3">
            <i class="fas fa-home me-2"></i> Back to Home
        </a>
        <p class="inspiration">Don’t worry, you’re still on the right path </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
